<!DOCTYPE html>
<html>
<head>
  <title>VocabBuilder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id="banner"> <%= @page_title || "William's Vocabulary Builder" %> </div>
  <br />
  <% if flash[:alert] %>
    <div class="notice">>>> ALERT: <%= flash[:alert] %> <<<</div>
    <br />
  <% end %>
  <% if flash[:notice] %>
    <div class="notice">NOTICE: <%= flash[:notice] %></div>
    <br />
  <% end %>


  <div id="main"
		<%= yield %>
	</div>
</body>
</html>
